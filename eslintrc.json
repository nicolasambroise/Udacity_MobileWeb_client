{
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "rules": {
      "indent": ["warn", 2],
      "linebreak-style": ["error", "windows"],
      "semi": ["warn", "always"],
      "eqeqeq": "warn",
      "curly": "warn",
      "quotes": ["warn", "single"]
    }
}
